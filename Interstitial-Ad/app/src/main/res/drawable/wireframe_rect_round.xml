<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Light gray rounded background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" />
            <corners android:radius="10dp" />
            <stroke android:color="#000000" android:width="1dp" />
            <size
                android:width="80dp"
                android:height="20dp" />
        </shape>
    </item>

    <!-- Thin horizontal line -->
    <item
        android:bottom="9dp"
        android:left="10dp"
        android:right="10dp"
        android:top="9dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Left black dot -->
    <item
        android:bottom="6dp"
        android:left="65dp"
        android:right="8dp"
        android:top="6dp">
        <shape android:shape="oval">
            <size
                android:width="2dp"
                android:height="2dp" />
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Right black dot -->
    <item
        android:bottom="6dp"
        android:left="8dp"
        android:right="65dp"
        android:top="6dp">
        <shape android:shape="oval">
            <size
                android:width="2dp"
                android:height="2dp" />
            <solid android:color="#000000" />
        </shape>
    </item>
</layer-list>
